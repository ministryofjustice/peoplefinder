- content_for :page_title do
  = page_title

- content_for :cookie_message do
  = "<p>GOV.UK uses cookies to make the site simpler. <a href=\"/cookies\">Find out more about cookies</a></p>".html_safe

- content_for :global_header_text do
  = 'Ministry of Justice'

- content_for :homepage_url do
  = home_path

- content_for :logo_link_title do
  = 'Go to the People Finder homepage'

- content_for :head do

  :javascript
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0], j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);})(window,document,'script','dataLayer','GTM-MRLL6W5');

  = stylesheet_link_tag "application", media: "all"
  = csrf_meta_tag
  %meta{name: "format-detection", content: "telephone=no"}

  /[if IE 6]
    = stylesheet_link_tag "application-ie6", media: "all"

  /[if IE 7]
    = stylesheet_link_tag "application-ie7", media: "all"

  /[if IE 8]
    = stylesheet_link_tag "application-ie8", media: "all"


- content_for :body_classes do
  = " controller-" + controller.controller_name

- content_for :body_start do
  %noscript
    %iframe{src:"https://www.googletagmanager.com/ns.html?id=GTM-MRLL6W5", height:"0", width:"0", style:"display:none;visibility:hidden"}

- content_for :proposition_header do
  .header-proposition
    .content
      %a.js-header-toggle.menu{:href => "#proposition-links"}
        = "Menu"
      %nav#proposition-menu
        =link_to "MOJ People Finder", home_path, id: "proposition-name"
        = render "shared/loginout"

- content_for :footer_top do
  = render 'shared/feedback_form'

- content_for :footer_support_links do
  = render 'layouts/footer'

- content_for :body_end do
  = javascript_include_tag 'application'

- content_for :content do
  %main#content
    = yield :breadcrumbs

    = flash_messages

    = yield

= render template: 'layouts/govuk_template'
