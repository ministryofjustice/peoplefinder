= render partial: 'layouts/shared'
- content_for :header_app_name do
  =link_to app_title, home_path
  = render "shared/loginout"
- content_for :content do
  #wrapper
    %main#content{role: 'main'}
      = yield :editing_alert
      = flash_messages
      .grid-wrapper
        .grid.grid-1-3.new-profile
          .inner-block
            - if can_add_person_here?
              = link_to 'Create a new profile', new_person_path, class: 'add-new-person'
        .grid.grid-2-3
          .inner-block
            %nav
              .breadcrumbs= yield :breadcrumbs
      - if logged_in? && !@login_screen && !@editing_mode
        .grid-wrapper
          .grid.grid-2-3
            .inner-block= render 'shared/search'
          / .grid.grid-1-3
          /   .inner-block= render 'shared/edit_links'
      .inner-block
        = yield
        #report_link
          = yield :report_link
        #last_update
          = last_update
- content_for :cookie_message do
  %p= t('shared.cookie_message_html')
= render partial: "shared/feedback_form"
= render partial: "layouts/footer"
= render 'layouts/script'
= render template: "layouts/peoplefinder"
