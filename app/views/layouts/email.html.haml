!!! Strict
%html{xmlns: "http://www.w3.org/1999/xhtml"}
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "noindex,nofollow", name: "robots"}/
    %meta{content: "#{Rails.configuration.department_abbrev} People Finder", property: "og:title"}/
    %title #{Rails.configuration.department_name} - #{Rails.configuration.app_title}
    = stylesheet_link_tag "email", media: "all"
    :css
      @media only screen and (max-device-width: 600px) {
          table[class="body"] {
              width: 100% !important;
          }
      }
  %body
    %table.main
      %tbody
        %tr
          %td{valign: "top"}

            %table.banner
              %tbody
                %tr
                  %td.govuk-logo
                    = image_tag image_url('gov.uk_logo_crown_invert_trans-64x64.png'), alt: 'GOV.UK'
                    .text-vertical-left
                      #{Rails.configuration.department_name}
            #global-header-bar
            %table
              %tbody
                %tr
                  %td{height: "6", width: "600"}
                %tr
                  %td.title-header
                    %strong
                      People Finder
                %tr
                  %td

            %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0"}
              %tbody
                %tr
                  %td{width: "20"}
                  %td{align: "center", valign: "top", width: "560"}
                    %table{ cellpadding: "0", cellspacing: "0", border: "0", align: "center" }
                      %tbody
                        = yield

                  %td{width: "20"}

            %table
              %tbody
                %tr
                  %td{height: "50", width: "600"}

            %table.footer
              %tbody
                %tr
                  %td{colspan: "3", height: "15", width: "600"}
                %tr
                  %td{width: "20"}
                  %td.footer-text{align: "left", valign: "top", width: "560"}
                    If you're unsure an email is from the #{Rails.configuration.department_abbrev}:
                    %br/
                    â€¢ forward it to
                    %a{href: "#{Rails.configuration.support_email}", target: "_blank"}
                    #{Rails.configuration.support_email}
                  %td{width: "20"}
                %tr
                  %td{colspan: "3", height: "40", width: "600"}
