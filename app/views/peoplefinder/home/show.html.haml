- content_for :body_classes, 'home-page'

%h1= t('peoplefinder.home.heading', group_name: @group.name)
%p= t('peoplefinder.home.explanation')

%div.search-wrapper.grid-wrapper
  %p.grid-1-3.help-peoplefinder
    = t('peoplefinder.home.usage')

  %div.grid-1-2
    %h2= t('peoplefinder.home.search_heading')
    %p.hint-text{ aria: { hidden: 'true' } }= t('peoplefinder.home.search_hint')

    = render 'peoplefinder/shared/search'


%div.root-team
  %h2.org-structure= @group.name
  %div.leaders.grid.grid-1-3
    - @group.leaders.each do |leader|
      %div.profile
        = profile_image_tag leader, leader.image.medium
        %p
          =link_to leader.name, leader, class: 'leader-name'
          %span.leader-role= leader.memberships.where(group:@group).first.role

  %h3.grid.grid-2-3.about-team-header About the team
  %div.about-the-team.formatted-text.about.text.grid.grid-2-3
    = govspeak(@group.with_placeholder_default(:description))


%div.root-subteams
  %h2
    = "Teams within #{@group.name}"

  .grid-wrapper
    = render partial: "peoplefinder/groups/subgroup", collection: @group.children
