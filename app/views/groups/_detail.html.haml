- @page_title = @group
.group-title.line-below
  %span.lede Team
  - if @group.acronym?
    %h1.no-line= @group.acronym
    %h2
      = @group.name
      - if @group.children.count > 0
        = link_to "view #{pluralize_with_delimiter @group.children.count, 'sub-team'}", '#teams', class: 'small'
  - else
    %h1.no-line
      = @group.name
      - if @group.children.count > 0
        = link_to "view #{pluralize_with_delimiter @group.children.count, 'sub-team'}", '#teams', class: 'small'
      - unless @group.leaf_node?
        - if @all_people_count > 0 && @group.parent.present?
          .view-all-people.small
            = link_to "View #{ @all_people_count > 1 ? 'all' : '' } #{ pluralize_with_delimiter @all_people_count, 'person' } in #{ @group.name }", people_group_path(@group)

%div.grid-wrapper.details
  %div.grid.grid-1-3
    %div.inner-block.group-leader
      - if @group.leaderships.count > 0
        %h3 Team #{'leader'.pluralize(@group.leaderships.count)}
        - @group.leaderships_by_person.each do |person, leaderships|
          = render partial: 'leaderships', object: leaderships, locals: { person: person }
    %div.inner-block
      

  %div.grid.grid-2-3
    %div.inner-block.about
      %h3 About the team
      .formatted-text
        = govspeak(@group.with_placeholder_default(:description))

