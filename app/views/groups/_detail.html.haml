- @page_title = @group
.group-title.line-below
  %span.lede Team
  - if @group.acronym?
    %h1.no-line= @group.acronym
    %h2
      = @group.name
      - if @group.children.count > 0
        = link_to "view #{pluralize_with_delimiter @group.children.count, 'team'}", '#teams', class: 'small'
  - else
    %h1.no-line
      = @group.name
      - if @group.children.count > 0
        = link_to "view #{pluralize_with_delimiter @group.children.count, 'team'}", '#teams', class: 'small'

%div.grid-wrapper.details
  %div.grid.grid-3-3
    %div.inner-block.about
      %h3 About the team
      .formatted-text
        = govspeak(@group.with_placeholder_default(:description))

  %div.grid.grid-3-3
    %div.inner-block.group-leader
      - if @group.leaderships.count > 0
        %h3 Team #{pluralize_with_delimiter @group.leaderships.count, 'leader'}
        - @group.leaderships_by_person.each do |person, leaderships|
          %div.grid.grid-1-4
            = render partial: 'leaderships', object: leaderships, locals: { person: person }
