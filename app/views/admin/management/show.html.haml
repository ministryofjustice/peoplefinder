- content_for :body_classes do
  = 'admin-page'

.grid-row.mod-heading
  .column-full
    %h1.heading-xlarge.mod-heading-border
      = t('management.header')

    %h2.heading-medium.with-border-lg
      = t('management.report_header')

    %h3.heading-small
      = "User behaviour report"

    #user-behavior-report
      %span.generate-link
        = link_to 'generate', admin_generate_user_behavior_report_path, class: "button"
      %span.download-link
        = link_to 'download', admin_user_behavior_report_path, class: "button"

    %h2.heading-medium.with-border-lg.tool-name
      = t('management.tools_header')

    %ul
      %li#audit-trail
        = link_to 'Audit trail', audit_trail_path
      %li#bulk-uploader
        = link_to 'Bulk uploader', new_admin_person_upload_path
      %li#sscl-users
        = link_to 'SSCL Users', group_path("shared-services-connected-ltd")
