      = t('management.header')

    %h2.heading-medium.with-border-lg
      = t('management.report_header')

    %h3.heading-small
      = "User behaviour report"

    #user-behavior-report
      %span.generate-link
        = link_to 'generate', admin_generate_user_behavior_report_path, class: "button"
      %span.download-link
        = link_to 'download', admin_user_behavior_report_path, class: "button"

    %h2.heading-medium.with-border-lg.tool-name
      = t('management.tools_header')

    #bulk-uploader
      = link_to 'Bulk uploader', new_admin_person_upload_path, class: "button"

