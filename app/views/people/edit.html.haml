- content_for :body_classes, 'edit-profile-page '

= render partial: 'breadcrumbs'

- if @activity == 'complete'
  .completion-prompt
    %p Fill in the highlighted fields to achieve 100% profile completion

%h1.heading-xlarge.with-border-lg
  = @page_title = (params[:page_title] || "Edit profile")

= GovukElementsErrorsHelper.error_summary @person,
  "There is a problem with the form",
  "Check below for more detail"

= render partial: 'form', locals: { building: false }