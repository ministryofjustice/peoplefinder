- membership = membership_f.object
.membership
  .form-group
    = membership_f.label :role, 'Job title', class: 'form-label-bold'
    = membership_f.text_field :role, class: 'form-control'

  .form-group
    = membership_f.label :group_id, 'Team', class: 'form-label-bold'
    %p.form-hint Use this to select the team you are in in the organisation
    %p.form-hint  If your team doesnt exist, you'll need to save your changes and add a new sub team when viewing a team on People Finder
    .editable-container
      .editable-fields{ style: ('display:none' unless membership.new_record?) }
        - if @org_structure
          = render 'shared/org_browser', org_structure: @org_structure, form: membership_f, field_name: :group_id

      - unless membership.new_record?
        .editable-summary.parent-summary
          - if membership.group
            .title= breadcrumbs(membership.path)
          .cta= link_to 'Edit', '#', class: 'show-editable-fields'

  .form-group
    = membership_f.label :leader, '<span class="team-led">Team</span> leader?'.html_safe, class: 'form-label-bold'
    = membership_f.check_box :leader
    %span.hint= role_translate(membership.person, 'memberships.leader').html_safe

  .form-group
    = membership_f.label :subscribed, 'Team updates', class: 'form-label-bold'
    = membership_f.check_box :subscribed, class: 'membership-subscribed-check-box'
    %span.hint= role_translate(membership.person, 'memberships.subscribed')

    .remove-link
      - if membership.new_record?
        = link_to 'Delete', '#', class: 'remove-new-membership'

      - else
        = link_to 'Delete', membership_path(membership,
          referer: request.path),
          method: :delete,
          data: {confirm: "Are you sure you want to remove #{ membership.person} from #{ membership.group }? " }

